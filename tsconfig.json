{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "module": "CommonJS",
      "esModuleInterop": true,
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
      },
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "incremental": true
    },
    "exclude": ["node_modules"]
}
  